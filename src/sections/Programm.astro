---
const acts = [
  {
    "day": "Freitag",
    "artist": "Benedict Bendinelli",
    "time": "17:00 - 22:00",
    "details": "Disco House"
  },
  {
    "day": "Samstag",
    "artist": "dino.tiels",
    "time": "16:00 - 21:00",
    "details": "80er & 90er Beats"
  },
  {
    "day": "Samstag",
    "artist": "The Madley",
    "time": "Ab 16:30",
    "details": "4 Live Sessions zwischen den DJ Sets"
  },
  {
    "day": "Samstag",
    "artist": "Josh",
    "time": "21:00 - 22:00",
    "details": "shades of pop"
  },
  {
    "day": "Sonntag",
    "time": "14:00 - 19:00",
    "details": "Lounge & Chill out"
  }
]
;
---
<style>
  .programm {
    padding: var(--spacing-xl) var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }

  .lineup-image {
    flex: 1;
    max-width: 50%;
    width: 100%;
  }

  .lineup-image img {
    width: 100%;
    height: auto;
  }

  .acts-list {
    flex: 1;
    max-width: 50%;
    width: 100%;
  }

  .acts-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .dayHeading {
    font-size: 2rem;
    font-weight: bold;
    color: var(--color-accentSecondary);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-sm);
  }

  .acts-list > div:first-child .dayHeading {
    margin-top: 0;
  }

  .artist {
    color: var(--color-primary);
    font-weight: bold;
  }

  .details {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .programm {
      flex-direction: column;
      align-items: center;
      gap: 0px;
    }
    .acts-list {
      max-width: 100%;
    }
    .lineup-image {
      max-width: 70%;
      margin-bottom: -7em;
    }
  }

  .animate-slide-right {
    animation: slideRight 3.2s cubic-bezier(0.4,0,0.2,1) forwards;
  }
  @keyframes slideRight {
    from {
      transform: translate(0,0);
      transform: translateY(0);
      opacity: 0.7;
    }
    to {
      transform: translate(40px,20px);
      opacity: 1;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lineupImage = document.querySelector('.lineup-image');
    if (!lineupImage) return;
    let hasAnimated = false;
    const observer = new window.IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !hasAnimated) {
          lineupImage.classList.add('animate-slide-right');
          hasAnimated = true;
          observer.disconnect();
        }
      });
    }, { threshold: 0.3 });
    observer.observe(lineupImage);
  });
</script>

<section id="programm" class="programm">
  <div class="lineup-image">
    <img src="./banner-lineup.png" alt="Lineup Banner" />
  </div>
  <div class="acts-list">
    {['Freitag', 'Samstag', 'Sonntag'].map((day) => (
      <div>
        <h2 class="dayHeading">{day}</h2>
        <ul>
          {acts
            .filter((act) => act.day === day)
            .map((act) => (
              <li>
                {act.artist && <span class="artist">{act.artist}</span>}
                {act.artist && <br/>}
                <span class="details">{act.time} | {act.details}</span>
              </li>
            ))}
        </ul>
      </div>
    ))}
  </div>
</section>
