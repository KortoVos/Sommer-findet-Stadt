        display: flex;
        max-width: 50%;
        justify-content: center;
        width: 100%;
        position: relative;
        align-self: flex-start;
        z-index: 2;
    }
 .map-image img {
        width: auto;
        max-height: 18em;
        border-radius: 0;
        box-shadow: none;
    }
    .map-list {
        flex: 1;
        max-width: 50%;
        width: 100%;
