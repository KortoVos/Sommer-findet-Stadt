<script>
  // Parallax effect for map image: moves at half scroll speed within section
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('lageplan');
    const image = section?.querySelector('.map-image img');
    if (!section || !image) return;
    function isMobile() {
      return window.matchMedia('(max-width: 768px)').matches;
    }
    // Parallax parameters for speed curve
    const parallaxParams = {
      minSpeed: 0.0012, // slowest at start
      maxSpeed: 0.4,  // fastest in the middle
      endSpeed: 0.018, // slowest at end
      xFactor: 0.07  // right movement factor
    };
    function parallaxSpeedCurve(t) {
      // t: 0 (start) to 1 (end)
      // Ease in, fast in middle, ease out (cubic)
      // You can adjust this function for different curves
      return (
        parallaxParams.minSpeed * (1 - t) * (1 - t) +
        parallaxParams.maxSpeed * 4 * t * (1 - t) +
        parallaxParams.endSpeed * t * t
      );
    }
    function onScroll() {
      if (!isMobile()) {
        image.style.transform = '';
        return;
      }
      const rect = section.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      const triggerOffset = windowHeight * 0.3;
      if (rect.bottom < -triggerOffset || rect.top > windowHeight) {
        image.style.transform = '';
        return;
      }
      const scrollY = Math.max(0, -rect.top + triggerOffset);
      const sectionHeight = rect.height + triggerOffset;
      const t = Math.min(1, scrollY / sectionHeight); // progress 0..1
      const speed = parallaxSpeedCurve(t);
      const offsetY = scrollY * speed;
      const offsetX = scrollY * parallaxParams.xFactor;
      const parent = image.parentElement;
      if (parent) parent.style.overflow = 'visible';
      image.style.transform = `translate(${offsetX}px, ${offsetY}px)`;
      image.style.maxWidth = 'none';
      image.style.width = 'auto';
    }
    window.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onScroll);
    onScroll();
  });
</script>
   

<section id="lageplan">
    <h2>Lageplan</h2>
    <div class="map-section">
        <div class="map-image">
            <img src="./Map.png" alt="Lageplan Festival" />
        </div>
