        #lageplan{
            padding-top: 5em;     
            overflow: visible;      
        }
        #lageplan h2{
            z-index: 5;     
        }
        .map-section {
            flex-direction: row-reverse;
            align-items: center;
            gap: 0px;
        }
        .map-list {
            width: 80%;
            max-width: 100%;
            z-index: 1;
        }
         .map-list ul {
            width: 150%;
            z-index: 1;
        }
        .map-image {
            max-width: 50%;
            margin-bottom: 0em;
            z-index: -1;
        }
        .map-image img {
            position: relative;
            top: -10em;
        }
    }
</style>
<script>
  // Parallax effect for map image: moves at half scroll speed within section
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('lageplan');
    const image = section?.querySelector('.map-image img');
    if (!section || !image) return;
    function isMobile() {
      return window.matchMedia('(max-width: 768px)').matches;
    }
    function onScroll() {
      if (!isMobile()) {
        image.style.transform = '';
        return;
      }
      const rect = section.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      // Start effect earlier: trigger when section is within 1.5x viewport height from top
      const triggerOffset = windowHeight * 0.3;
      if (rect.bottom < -triggerOffset || rect.top > windowHeight) {
        image.style.transform = '';
        return;
      }
      // Parallax: move image up and slightly right as you scroll
      const scrollY = Math.max(0, -rect.top + triggerOffset);
      const offsetY = scrollY * 0.3;
      const offsetX = scrollY * 0.03; // subtle right movement
      // Prevent horizontal scroll by using 'overflow-x: clip' on parent, but allow full image to be visible
      const parent = image.parentElement;
      if (parent) parent.style.overflow = 'visible';
      image.style.transform = `translate(${offsetX}px, ${offsetY}px)`;
      // Ensure image stays fully visible and doesn't shrink
      image.style.maxWidth = 'none';
      image.style.width = 'auto';
    }
    window.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onScroll);
    onScroll();
  });
</script>
   

<section id="lageplan">
    <h2>Lageplan</h2>
    <div class="map-section">
        <div class="map-image">
            <img src="./Map.png" alt="Lageplan Festival" />
        </div>
        <div class="map-list">
            <ul>
                {
                    mapPoints.map((point, idx) => (
                        <li style={`color: ${point.color}`}>
                            <span
                                style={`color: ${point.color}; font-weight: bold; margin-right: 0.5em;`}
                            >
                                {idx + 1}.
                            </span>{" "}
                            {point.label}
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</section>
