const galleryImages = [
  "./Bilder Insta Beitrag/IG-Beitrag-01.png",
  "./Bilder Insta Beitrag/IG-Beitrag-02.png",
  "./Bilder Insta Beitrag/IG-Beitrag-03.png",
];
---

<section id="social" class="SozialMedia" style={`--carousel-height: 420px;`}>
  <div class="event-info">
    <div class="event-info-text">
      <h2>News, Stories & mehr</h2>
