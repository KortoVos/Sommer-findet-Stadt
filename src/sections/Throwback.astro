---
import AnimatedCounter from "./../components/AnimatedCounter.astro";
import CarouselGallery from "./../components/CarouselGallery.astro";

const galleryImages = [
  "https://picsum.photos/seed/sunshine/800/500",
  "https://picsum.photos/seed/forest/800/500",
  "https://picsum.photos/seed/festival/800/500",
  "https://picsum.photos/seed/music/800/500",
  "https://picsum.photos/seed/friends/800/500",
];
---

<style>
  .throwback {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: var(--spacing-xl) var(--spacing-md);
  }
</style>

<section id="throwback" class="throwback">
  <h2>Throwback</h2>
