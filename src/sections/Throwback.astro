  <CarouselGallery height="350px">
    {galleryImages.map((src) => (
      <img src={src} alt="Throwback Image" />
    ))}
  </CarouselGallery>
  <div style="display: flex; gap: var(--spacing-lg); justify-content: center; margin-top: var(--spacing-lg);">
    <AnimatedCounter target={4} label="Jahre Sommer findet Stadt" id="LitersOfWine1" />
