---
import AnimatedCounter from "./../components/AnimatedCounter.astro";
import CarouselGallery from "./../components/CarouselGallery.astro";

const galleryImages = [
  "https://picsum.photos/seed/sunshine/800/500",
  "https://picsum.photos/seed/forest/800/500",
  "https://picsum.photos/seed/festival/800/500",
  "https://picsum.photos/seed/music/800/500",
  "https://picsum.photos/seed/friends/800/500",
];
---

<style>
  .throwback {
    overflow: hidden;
    position: relative;
    padding: var(--spacing-xl) var(--spacing-md);
  }
  .galleryImage{
    width: 250px;
  }
  .counters-container {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: space-around;
    margin-top: var(--spacing-lg);
    flex-wrap: wrap;
  }
  .counter-wrapper {
    width: 30%;
    min-width: 120px;
    max-width: 180px;
    display: flex;
    justify-content: center;
  }
  @media (max-width: 767px) {
    .counters-container {
      flex-direction: column;
      align-items: center;
      gap: var(--spacing-md);
    }
    .counter-wrapper {
      width: 100%;
      min-width: 0;
      max-width: 100%;
    }
  }
</style>

<section id="throwback" class="throwback">
  <h2>Throwback</h2>
  <h3>RÃ¼ckblick auf die letzten Jahre</h3>
  <CarouselGallery height="350px">
    {galleryImages.map((src) => (
      <img src={src} alt="Throwback Image" class="galleryImage" />
    ))}
  </CarouselGallery>
  <div class="counters-container">
    <div class="counter-wrapper">
      <AnimatedCounter target={4} label="Jahre Sommer findet Stadt" id="LitersOfWine1" />
    </div>
    <div class="counter-wrapper">
      <AnimatedCounter target={8000} label="Besucher" id="LitersOfWine2" />
    </div>
    <div class="counter-wrapper">
      <AnimatedCounter target={600} label="Liter Wein wurden getrunken" id="LitersOfWine3" />
    </div>
  </div>
</section>
