---
import AnimatedCounter from "./../components/AnimatedCounter.astro";
import CarouselGallery from "./../components/CarouselGallery.astro";

const galleryImages = [
  "./Bilder Slider/1.JPG",
  "./Bilder Slider/2.JPG",
  "./Bilder Slider/3.JPG",
  "./Bilder Slider/4.JPG",
  "./Bilder Slider/5.JPG",
  "./Bilder Slider/6.JPG",
];
---

<style>
  .throwback {
    overflow: hidden;
    position: relative;
    padding: var(--spacing-xl) var(--spacing-md);
    --carousel-height: 150px;
  }
  .galleryImage{
    width: 450px;
  }
  .counters-container {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: space-around;
    margin-top: var(--spacing-lg);
    flex-wrap: wrap;
  }
  .counter-wrapper {
    width: 30%;
    min-width: 120px;
    max-width: 230px;
    display: flex;
    justify-content: center;
    text-align: center;
  }
  @media (max-width: 767px) {
    .counters-container {
      flex-direction: column;
      align-items: center;
      gap: var(--spacing-md);
    }
    .counter-wrapper {
      width: 100%;
      min-width: 0;
      max-width: 100%;
    }
  }
  @media (min-width: 480px) {
    .throwback {
      --carousel-height: 350px;
    }
  }
</style>

<section id="throwback" class="throwback" >
  <h2>Throwback</h2>
  <h3>RÃ¼ckblick auf die letzten Jahre</h3>
  <CarouselGallery >
    {galleryImages.map((src) => (
      <img src={src} alt="Throwback Image" class="galleryImage" />
    ))}
  </CarouselGallery>
  <div class="counters-container">
    <div class="counter-wrapper">
      <AnimatedCounter target={4} label="Jahre Sommer findet Stadt" id="LitersOfWine1" />
    </div>
    <div class="counter-wrapper">
      <AnimatedCounter target={8000} label="Besucher" id="LitersOfWine2" />
    </div>
    <div class="counter-wrapper">
      <AnimatedCounter target={100} label="Gute Laune" id="LitersOfWine3" />
    </div>
  </div>
</section>
