---
const navigationItems = [
  { name: "Highlights", href: "#highlights" },
  { name: "Programm", href: "#programm" },
  { name: "Throwback", href: "#throwback" },
  { name: "Social Media", href: "#social" },
]
---

<header  class="header">
  <div class="header-container">
    <div class="header-flex">
      <!-- Logo -->
      <div class="logo-wrapper">
        <a href="#home" class="logo-link">
          <img src="./logo-sommer-findet-stadt.png" alt="Sommer findet Stadt Logo" class="logo-image" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="desktop-nav" id="desktop-nav">
        {navigationItems.map((item) => (
          <a
            href={item.href}
            class="nav-link"
            data-section={item.href.substring(1)}
          >
            {item.name}
            <div class="nav-indicator"></div>
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <div class="mobile-menu-btn-wrapper">
        <button id="mobile-menu-button" class="mobile-menu-btn">
          <svg class="icon-menu" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <nav class="mobile-nav hidden" id="mobile-nav">
      <div class="mobile-nav-links">
        {navigationItems.map((item) => (
          <a
            href={item.href}
            class="mobile-nav-link"
            data-section={item.href.substring(1)}
          >
            {item.name}
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.header');
    const logoImage = document.querySelector('.logo-image');
    const mobileMenuBtn = document.getElementById('mobile-menu-button');
    const mobileNav = document.getElementById('mobile-nav');

    // Mobile menu toggle
    if (mobileMenuBtn && mobileNav) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileNav.classList.toggle('open');
        mobileNav.classList.toggle('hidden');
      });
      // Close menu on link click
      mobileNav.querySelectorAll('.mobile-nav-link').forEach(link => {
        link.addEventListener('click', () => {
          mobileNav.classList.remove('open');
          mobileNav.classList.add('hidden');
        });
      });
    }

    // Smooth scroll for nav links
    const navLinks = document.querySelectorAll('.nav-link, .mobile-nav-link, .logo-link');
    navLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href && href.startsWith('#')) {
          // Special case for #home: scroll to top smoothly
          if (href === '#home') {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: 'smooth' });
            return;
          }
          const target = document.querySelector(href);
          if (target) {
            e.preventDefault();
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });

    // Header background on scroll
    const handleScroll = () => {
      if (window.scrollY === 0) {
        header.classList.remove('header-scrolled');
        if (logoImage) logoImage.classList.add('logo-large');
      } else {
        header.classList.add('header-scrolled');
        if (logoImage) logoImage.classList.remove('logo-large');
      }
    };
    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Initial check
  });
</script>

<style>
  .header {
    position: fixed;
    top: 0; left: 0; right: 0;
    z-index: 50;
    background: #fff;
    transition: background 0.3s;
    /* border-bottom: 1px solid var(--color-accent); */
  }
  .header.header-scrolled {
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }
  .header-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding-left: var(--spacing-md);
    padding-right: var(--spacing-md);
  }
  .header-flex {
    justify-content: center;
    display: flex;
    align-items: center;
    height: 4rem;
    position: relative;
  }
  .logo-wrapper {
    flex-shrink: 0;
    /* Reserve space for the large logo so nav doesn't shift */
    width: 10rem;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }
  .mobile-menu-btn-wrapper {
    position: absolute;
    right: var(--spacing-md);
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
  }
  @media (max-width: 767px) {
    .header, .header.header-scrolled {
      background: #fff;
    }
    .logo-image,
    .logo-image.logo-large,
    .header.header-scrolled .logo-image {
      height: 3rem !important;
      transform: translateY(0) !important;
    }
    .logo-wrapper {
      justify-content: flex-start;
    }
    .header-flex {
      justify-content: flex-start;
    }
    .mobile-menu-btn-wrapper {
      display: block;
    }
  }
  @media (min-width: 768px) {
    .mobile-menu-btn-wrapper {
      display: none;
    }
  }
  .header.header-scrolled .logo-image {
    height: 3rem;
    transform: translateY(0);
  }
  @media (max-width: 767px) {
    .header, .header.header-scrolled {
      background: #fff;
    }
    .logo-image,
    .logo-image.logo-large,
    .header.header-scrolled .logo-image {
      height: 3rem !important;
      transform: translateY(0) !important;
    }
  }
  .desktop-nav {
    display: none;
  }
  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      position: relative;
    }
  }
  .nav-link {
    position: relative;
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 1.4rem;
    font-family: var(--font-heading);
    font-weight: 600;
    line-height: var(--line-height-base, 1.5);
    color: var(--color-primary);
    background: none;
    border: none;
    transition: color 0.2s;
    text-decoration: none;
  }
  .nav-link:hover,
  .nav-link.text-blue-600 {
    color: var(--color-accent);
  }
  .nav-indicator {
    position: absolute;
    bottom: 0; left: 0; right: 0;
    height: 0.2rem;
    background: var(--color-accent);
    border-radius: 9999px;
    transition: all 0.3s;
    opacity: 0;
  }
  .nav-link.text-blue-600 .nav-indicator,
  .nav-link:focus .nav-indicator {
    opacity: 1;
  }
  .mobile-menu-btn {
    padding: var(--spacing-sm);
    border-radius: 0.375rem;
    color: var(--color-text);
    background: none;
    border: none;
    transition: color 0.2s, background 0.2s;
  }
  .mobile-menu-btn:hover {
    color: var(--color-accent);
    background: color-mix(in srgb, var(--color-accent) 10%, white 90%);
  }
  .icon-menu {
    width: 1.5rem;
    height: 1.5rem;
  }
  .mobile-nav {
    padding-bottom: var(--spacing-md);
    transition: all 0.3s ease-in-out;
    display: none;
  }
  .mobile-nav.open {
    display: block;
  }
  .mobile-nav.hidden {
    display: none;
  }
  @media (min-width: 768px) {
    .mobile-nav {
      display: none !important;
    }
  }
  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  .mobile-nav-link {
    text-align: left;
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 1.4rem;
    font-family: var(--font-heading);
    font-weight: 600;
    line-height: var(--line-height-base, 1.5);
    color: var(--color-text);
    border-radius: 0.375rem;
    text-decoration: none;
    transition: color 0.2s, background 0.2s;
  }
  .mobile-nav-link:hover,
  .mobile-nav-link.text-blue-600 {
    color: var(--color-accent);
    background: color-mix(in srgb, var(--color-accent) 10%, white 90%);
  }
</style>
