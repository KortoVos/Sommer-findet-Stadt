---
import productList from '../data/productList';


---


<style>
  {offsetStyles}
</style>



<section class="productCard">
    <body>
        <!-- <img src="/img/image_processing20210916-22747-gzgga2.png" style="position: absolute;width: 994px;top: 27px;z-index: -2;" > -->
        <div id="ProductCard">
            <div id="grayStripe"></div>
            <div id="grayBottom"></div>
            {productList.pages.map((page, index) => (
                <input
                    type="radio"
                    class="sliderSelection"
                    name="position"
                    id={`input${index + 1}`}
                    style={`grid-column: ${index+3} / ${index+3};grid-row: -1/-2;`}
                    checked={index === 0}
                />
            ))}
            
            <div id="sliderContainer"><span id="slider"></span></div>

            <h1 id="carouselTitle">{productList?.title ?? 'No Title'}</h1>

            <div id="carousel">
                {productList.pages.map((page, index) => (
                    <div class="item">
                        <table class="productTable">
                            {page.items.map((item) => (
                                <tr>
                                    <td>{item.name}</td>
                                    <td>{item.dimensions}</td>
                                    <td>
                                        <img
                                            width="30px"
                                            height="30px"
                                            src={item.image}
                                        />
                                    </td>
                                </tr>
                            ))}
                        </table>
                    </div>
                ))}
                
            </div>
            <div id="carousel2">
                {productList.pages.map((page, index) => (
                    <div class="item2">
                        <h1>
                            {page.subTitle.split(' ').map((word, i, arr) => (
                                <>
                                    {word}
                                    {i < arr.length - 1 && <br />}
                                </>
                            ))}
                        </h1>
                    </div>
                ))}
                
            </div>
            <div id="rotatingDiv">
                <div id="TopLeftHideOverflow">
                    <div id="svgContainer">
                        <svg
                            style="width: 110%; height:110%;"
                            viewBox="0 0 450 450"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <defs>
                                {productList.pages.map((page, index) => (
                                    <linearGradient
                                        id={`grad${index + 1}`}
                                    >
                                        <stop
                                            offset="5%"
                                            stop-color={page.gradient[0]}
                                        ></stop>
                                        <stop
                                            offset="95%"
                                            stop-color={page.gradient[1]}
                                        ></stop>
                                    </linearGradient>
                                ))}                               
                            </defs>
                            <g id="Layer_1">
                                <g stroke="null">
                                    <path
                                        id="PentaPath"
                                        stroke="null"
                                        d="m270.68091,27.851l133.69,97.129c13.324,9.6484 23.25,23.266 28.355,38.906c5.1055,15.637 5.125,32.488 0.05859,48.141l-51.195,157.18c-5.0781,15.633 -14.973,29.258 -28.27,38.922c-13.297,9.6641 -29.312,14.871 -45.75,14.879l-165.28,0c-16.438,-0.00781 -32.453,-5.2148 -45.75,-14.879c-13.297,-9.6641 -23.191,-23.289 -28.273,-38.922l-51.051,-157.18c-5.0664,-15.652 -5.0469,-32.504 0.0586,-48.141c5.1055,-15.641 15.031,-29.258 28.355,-38.906l133.55,-97.129c13.297,-9.6562 29.312,-14.859 45.746,-14.859c16.438,0 32.449,5.2031 45.75,14.859l0.00581,0z"
                                    ></path>
                                </g>
                            </g>
                        </svg>
                    </div>
                </div>
                {productList.pages.map((page, index) => (
                    <div
                        class="rotatingDiv2"
                        id={`rotImg${index + 1}`}
                    >
                        <div class="imageContainer">
                            {page.items.map((item) => (
                                <img
                                    class="rotatingImg"
                                    src={item.image}
                                    alt={item.name}
                                />
                            ))}
                        </div>
                    </div>
                ))}
                
            </div>
        </div>
    </body>
</section>

<style>
    html {
        height: 90%;
        --cardHeight: 600;
        --cardWidth: 885;
    }

    body {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgb(226, 226, 226);
        font-family: "Roboto";
        height: 100%;
        overflow: hidden;
    }

    #grayBottom {
        background-color: #ebeaeb;

        border-bottom-right-radius: 50px;
        border-bottom-left-radius: 50px;
        grid-area: -1 / 1 / -3 / 10;
    }

    #grayStripe {
        background-color: #ebeaeb;
        grid-area: 4 / 1 / 5 / 10;
    }

    #carouselTitle {
        font-family: "Roboto";
        font-weight: 200;
        grid-area: 2 /-4 /2/-1;
        font-size: 1.8em;
        margin: 6px;
        line-height: 37px;
    }

    .productTable {
        font-size: 1em;
        width: 100%;
        height: 100%;
    }

    .productTable td {
        padding: 10px;
    }

    #ProductCard {
        position: relative;
        background-color: rgb(255, 255, 255);
        height: calc((var(--cardHeight)) * 1px);
        width: calc((var(--cardWidth)) * 1px);
        margin: 0;
        display: grid;
        grid-template-rows: 20% 15% 12% 11% 11% 11% 20%;
        grid-template-columns: 40px 1fr 40px 40px 40px 40px 40px 1fr 40px;
        border-radius: 50px;
        box-shadow: 2px 2px 20px 1px rgba(0, 0, 0, 0.548);
    }

    #svgContainer {
        width: 110%;
        height: 110%;
        margin-top: -101px;
        margin-left: -167px;
    }

    .imageContainer img {
        max-height: 150px;
        max-width: 180px;
    }

    @media only screen and (max-width: 600px) {
        #ProductCard {
            grid-template-rows: 30% 15% 12% 11% 11% 11% 10%;
            grid-template-columns: 40px 1fr 40px 40px 40px 40px 40px 1fr 40px;
        }

        #carouselTitle {
            grid-area: 2 /1 /2/-1;
        }

        div#rotatingDiv {
            grid-area: 1 / 1 / 3 /10;
        }

        div#carousel {
            grid-area: 4 /1 /-2/-1;
        }

        div#carousel2 {
            grid-area: 1 / 7 / 2 /10;
        }
        div#carousel2 h1 {
            font-size: 2.7em;
        }

        div.rotatingDiv2 {
            --startDiff: calc((var(--imgContainerPosition) * -120deg) + 300deg);
            margin-right: -600px;
            margin-top: -100px;
            width: 90%;
        }

        img.rotatingImg:nth-of-type(1) {
            position: absolute;
            top: 5px;
            left: -71px;
        }
        img.rotatingImg:nth-of-type(2) {
            position: absolute;
            top: -190px;
            left: 60px;
        }
        img.rotatingImg:nth-of-type(3) {
            position: absolute;
            top: -145px;
            left: -45px;
        }

        #svgContainer {
            width: 140%;
            height: 140%;
            margin-top: -130px;
            margin-left: 90px;
        }
        .imageContainer img {
            max-height: 120px;
            max-width: 150px;
        }
    }

    div#rotatingDiv {
        transition: all 0.25s linear;
        --position: 1;
        --bgColor: url(#grad1);
        grid-area: 1 / 1 / 7 /6;
        height: 100%;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 0;
    }

    div#TopLeftHideOverflow {
        grid-area: 1 / 1 / 6 /6;
        height: 100%;
        width: 100%;
        overflow: hidden;
        border-top-left-radius: 50px;
        border-top-right-radius: 50px;
    }

    div.rotatingDiv2 {
        --animationFunction: all 0.85s cubic-bezier(0, 0.22, 0.165, 1);
        /* --startDiff: 0deg; */
        --startDiff: calc((var(--imgContainerPosition) * -120deg) + 210deg);
        margin-left: -200px;
        margin-top: -200px;
        position: absolute;
        transition: var(--animationFunction);
        width: 75%;
        height: 100px;
        transform: rotateX(0deg) rotateY(0deg)
            rotateZ(calc(((360deg / 3) * var(--position)) + var(--startDiff)));
        transform-origin: center center;
        z-index: 12;
        opacity: 0;
    }
    div.imageContainer {
        transition: var(--animationFunction);
    }

    
    div.rotatingDiv2:nth-of-type(2) {
        --imgContainerPosition: 1;
    }
    div.rotatingDiv2:nth-of-type(3) {
        --imgContainerPosition: 2;
    }
    div.rotatingDiv2:nth-of-type(4) {
        --imgContainerPosition: 3;
    }
    div.rotatingDiv2:nth-of-type(5) {
        --imgContainerPosition: 4;
    }
    div.rotatingDiv2:nth-of-type(6) {
        --imgContainerPosition: 5;
    }

    .imageContainer img {
        position: absolute;
        transition: var(--animationFunction);
        transform: rotateX(0deg) rotateY(0deg)
            rotateZ(calc(((-360deg / 3) * var(--position)) - var(--startDiff)));
        /* background-color: aqua; */
    }

    img.rotatingImg:nth-of-type(1) {
        position: absolute;
        top: 150px;
        left: 50px;
    }
    img.rotatingImg:nth-of-type(2) {
        position: absolute;
        top: -220px;
        left: 50px;
    }
    img.rotatingImg:nth-of-type(3) {
        position: absolute;
        left: -0px;
    }

    #PentaPath {
        transform: rotateX(0deg) rotateY(0deg)
            rotateZ(calc(((360deg / 5) * var(--position)) + 61deg));
        transform-origin: center center;
        transition: all 0.25s linear;
        fill: var(--bgColor);
    }

    div#carousel {
        grid-area: 4 /-4 /7/-2;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        transform-style: preserve-3d;
        perspective: 600px;
        --items: 5;
        --middle: 3;
        --position: 1;
        pointer-events: none;
        font-size: 0.8em;
    }

    div.item {
        position: absolute;
        width: 100%;
        height: 100%;
        /* background-color: coral; */
        --r: calc(var(--position) - var(--offset));
        --abs: max(calc(var(--r) * -1), var(--r));
        transition: all 0.25s linear;
        transform: translateX(calc(-100% * var(--r)));
        /* z-index: calc((var(--position) - var(--abs))); */
    }

    div.item:nth-of-type(1) {
        --offset: 1;
    }
    div.item:nth-of-type(2) {
        --offset: 2;
    }
    div.item:nth-of-type(3) {
        --offset: 3;
    }
    div.item:nth-of-type(4) {
        --offset: 4;
    }
    div.item:nth-of-type(5) {
        --offset: 5;
    }


    #input1:checked ~ div#carousel {
        --position: 1;
    }
    #input2:checked ~ div#carousel {
