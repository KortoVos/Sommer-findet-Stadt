---
const logos = [
  { src: './logo-sommer-findet-stadt.png', alt: 'Sommer findet Stadt Logo', link: 'https://sommerfindetstadt.de' },
  { src: './icon-facebook.png', alt: 'Facebook', link: 'https://facebook.com' },
  { src: './icon-instagram.png', alt: 'Instagram', link: 'https://instagram.com' },
  { src: './icon-music.png', alt: 'Music' },
  { src: 'https://picsum.photos/seed/sunshine/800/500', alt: 'Sunshine', link: 'https://example.com/sunshine' },
  { src: 'https://picsum.photos/seed/sky/800/500', alt: 'Sky' },
  { src: 'https://picsum.photos/seed/party/800/500', alt: 'Party', link: 'https://example.com/party' },
  { src: 'https://picsum.photos/seed/festival/800/500', alt: 'Festival' },
  { src: 'https://picsum.photos/seed/forest/800/500', alt: 'Forest', link: 'https://example.com/forest' },
  { src: 'https://picsum.photos/seed/river/800/500', alt: 'River' },
  { src: 'https://picsum.photos/seed/flower/800/500', alt: 'Flower', link: 'https://example.com/flower' },
  { src: 'https://picsum.photos/seed/tree/800/500', alt: 'Tree' },
  { src: 'https://picsum.photos/seed/people/800/500', alt: 'People', link: 'https://example.com/people' },
  { src: 'https://picsum.photos/seed/city/800/500', alt: 'City' },
];
---
<style>
footer {
  padding: 0;
  text-align: center;
}
.footer-wave {
  width: 100%;
  display: block;
  line-height: 0;
  margin-bottom: -1px;
}
.footer-content {
  background-color: #fff;
  padding: 0;
  margin: 0;
}
.footer-logos {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 4.5rem;
  padding: 3rem 0;
}
.footer-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120px;
  max-width: 220px;
  margin: 0;
}
.footer-logo img {
  max-height: 120px;
  max-width: 100%;
  width: auto;
  height: auto;
  display: block;
}
</style>
<footer>
  <svg
    class="footer-wave"
    viewBox="0 0 1440 80"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    preserveAspectRatio="none"
  >
    <path
      d="M0,0 C240,60 480,20 720,60 C960,100 1200,20 1440,60 L1440,80 L0,80 Z"
      fill="#ffffff"
    />
  </svg>
  <div class="footer-content">
    <div class="footer-logos">
      {logos.map(logo => (
        logo.link ? (
          <div class="footer-logo"><a href={logo.link} target="_blank" rel="noopener"><img src={logo.src} alt={logo.alt} /></a></div>
        ) : (
          <div class="footer-logo"><img src={logo.src} alt={logo.alt} /></div>
        )
      ))}
    </div>
  </div>
</footer>
